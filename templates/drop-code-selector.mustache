<h3>Select a thing</h3>

<!-- TODO add a button to create a new item or trade -->
<!-- Add a tab for items and one for trades -->


<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Items</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Trades</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <form>
        <h4>Items</h4>
        <select class="tiny-stash-item-select">
          {{#items}}
            <option data-hash="{{hashcode}}" data-type="item">{{name}} ({{location}})</option>
          {{/items}}
        </select>
        <div class="tiny-stash-item-code">
        </div>
        <!-- Show selected thing -->
        <!-- Provide options related to this thing -->
    </form>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <form>
        <h4>Trades</h4>
        <select>
          {{#trades}}
            <option>{{name}}</option>
          {{/trades}}
        </select>
        <!-- Show selected thing -->
        <!-- Provide options related to this thing -->
    </form>
  </div>
</div>
